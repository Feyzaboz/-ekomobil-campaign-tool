{
  "name": "ekomobil-campaign-tool-backend",
  "version": "1.0.0",
  "description": "Backend API for Ekomobil Campaign Tool",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "import": "tsx src/scripts/importFromOld.ts",
    "update-integrators": "tsx src/scripts/updateBrandIntegrators.ts",
    "sync-production": "tsx src/scripts/syncToProduction.ts",
    "sync-from-local": "tsx src/scripts/syncFromLocal.ts",
    "postinstall": "npm run build || true"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
